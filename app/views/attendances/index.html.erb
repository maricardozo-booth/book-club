<div>
  <div>
    <h1>
      List of all attendances
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new attendance
    </h2>

    <form action="/insert_attendance" method="post">
      <div>
        <label for="member_id_box">
          Member
        </label>

        <input type="text" id="member_id_box" name="query_member_id">
      </div>

      <div>
        <label for="meeting_id_box">
          Meeting
        </label>

        <input type="text" id="meeting_id_box" name="query_meeting_id">
      </div>

      <button>
        Create attendance
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Member
        </th>

        <th>
          Meeting
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_attendances.each do |an_attendance| %>
      <tr>
        <td>
          <%= an_attendance.id %>
        </td>

        <td>
          <%= an_attendance.member_id %>
        </td>

        <td>
          <%= an_attendance.meeting_id %>
        </td>

        <td>
          <%= time_ago_in_words(an_attendance.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_attendance.updated_at) %> ago
        </td>

        <td>
          <a href="/attendances/<%= an_attendance.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
