<div>
  <div>
  <% if current_member == nil %>
<div> ERROR</div>
    <% else %>

    <h1>
      <%= @the_member.username %> details
    </h1>

          <div>
      <div>
        <a href="/members/edit">
          Edit profile
        </a>
      </div>

    <div>
      <div>
        <a href="/">
          Go back
        </a>
      </div>

<div>
  <div>
    <h1>
      Currrently reading: <%= @active_reading.book_read.title %>
    </h1>
      <div>
        My progress: <%= @active_reading.progress*100 %>%
      </div>

           <form action="/update_reading" method="post">
        <input type="hidden" id="member_id_box" name="query_member_id" value="<% current_member.id%>">
        <input type="hidden" id="meeting_id_box" name="query_meeting_id" value="<% @active_meeting.at(0).id%>">
        <input type="number" id="progress_box" name="query_progress">
      </div>
      <button>
        Update my Progress
      </button>
    </form>
        <form>
          <div>
        <label for="status_box">
          Currently reading
        </label>

        <select id="book_id_box" name="query_book_id">
        <% @list_of_books.each do |a_book| %>
        <option value="<%= a_book.id %>"><%= a_book.title %></option>
        <% end %>

       </select>
      </div>

      <button>
        Update currently reading
      </button>
    </form>


      <div>
        <a href="/delete_reading/<%= @active_reading.id %>">
          Delete reading
        </a>
      </div>
    </div>

  </div>
</div>
<hr>
<div>
   <h2>
   My past readings
   </h2>
 <div>

<table border="1">
     <tr>
       <th>
         Title
       </th>
      <th>
      
       </th>
     </tr>


     <% @past_readings.each do |a_book| %>
     <tr>

       <td>
         <%= a_book.book_read.title %>
       </td>


       <td>
         <a href="/books/<%= a_book.id %>">
           Show details
         </a>
       </td>
     </tr>
     <% end %>
   </table>
 </div>
</div>

<hr>
     <% end %>
