 <% if current_member != nil %>
 <% if current_member.admin_status == true %>

 <hr>
<div>
  <div>
    <h3>
      (Co-chairs only) Edit book
    </h3>

    <form action="/modify_book/<%= @the_book.id %>" method="post">
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title" value="<%= @the_book.title %>">
      </div>

      <div>
        <label for="author_box">
          Author
        </label>

        <input type="text" id="author_box" name="query_author" value="<%= @the_book.author %>">
      </div>

      <div>
       <label for="genre_box">
         Genre
       </label>
        <select id="genre_box" name="query_genre">
        <option value="Fantasy">Fantasy</option>
        <option value="Science Fiction">Science Fiction</option>
        <option value="Mystery">Mystery</option>
        <option value="Romance">Romance</option>
        <option value="Thriller">Thriller</option>
        <option value="Historical Fiction">Historical Fiction</option>
        <option value="Non-Fiction">Non-Fiction</option>
        <option value="Horror">Horror</option>
        <option value="Adventure">Adventure</option>
        <option value="Dystopian">Dystopian</option>
        <option value="Comedy">Comedy</option>
        <option value="Drama">Drama</option>
        <option value="Poetry">Poetry</option>
        </select>
        </div>

      <div>
        <label for="number_of_pages_box">
          Number of pages
        </label>

        <input type="text" id="number_of_pages_box" name="query_number_of_pages" value="<%= @the_book.number_of_pages %>">
      </div>

           <div>
       <label for="cover_box">
       Book cover image URL
       </label>
       <input type="text" id="cover_box" name="query_cover_url">
     </div>
      <div>
        <label for="status_box">
          Status
        </label>

        <select id="status_box" name="query_status">
        <option value="Past Club read">Past read</option>
        <option value="Current Club read">Current Club read</option>
        <option value="Potential Club read">Potential Club read</option>
        </select>
      </div>

      <button>
        Update book
      </button>
    </form>
  </div>
</div>

<hr>
      <div>
        <a href="/delete_book/<%= @the_book.id %>">
          Delete book
        </a>
      </div>
    </div>
    <% else %>
<div> </div>
     <% end %>
       <% else %>
       <div></div>

     <% end %>
