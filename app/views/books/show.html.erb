    <div>
      <div>
        <a href="/meetings">
          Go back
        </a>
      </div>

      <dd>

<img src="<%= @the_book.cover_image_url %>" alt="Book cover">
  </dd>
    <dl>

      <dt>
        Status
      </dt>
      <dd>
        <%= @the_book.status %>
      </dd>

      <dt>
        Author
      </dt>
      <dd>
        <%= @the_book.author %>
